<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_start"
    android:id="@+id/content_start_activity"
    tools:context="com.trainingsapp.chrisals.trainingsapp.StartActivity"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/testtestestetst"
        android:textAlignment="center"
        android:weightSum="1"
        android:background="@color/white"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText1"
                android:layout_gravity="right"
                android:layout_above="@+id/editText2"
                android:layout_toEndOf="@+id/textView2"
                android:inputType="number|numberDecimal"
                android:hint="0" />

            <EditText
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:layout_gravity="right"
                android:layout_marginBottom="24dp"
                android:inputType="number|numberDecimal"
                android:layout_above="@+id/textView2"
                android:layout_alignStart="@+id/editText1"
                android:layout_alignEnd="@+id/editText1"
                android:hint="0" />

            <EditText
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:layout_gravity="right"
                android:layout_marginTop="241dp"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/editText2"
                android:layout_toEndOf="@+id/textView2"
                android:inputType="number|numberDecimal"
                android:hint="0" />

            <EditText
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText4"
                android:layout_gravity="right"
                android:layout_below="@+id/editText3"
                android:layout_alignStart="@+id/editText3"
                android:layout_alignEnd="@+id/editText3"
                android:inputType="number|numberDecimal"
                android:hint="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Squat"
                android:id="@+id/textView5"
                android:layout_above="@+id/editText2"
                android:layout_alignStart="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bench press"
                android:id="@+id/textView"
                android:layout_alignBottom="@+id/editText2"
                android:layout_alignStart="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Overheadpress"
                android:id="@+id/textView2"
                android:layout_above="@+id/editText4"
                android:layout_alignStart="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Deadlift"
                android:id="@+id/textView3"
                android:layout_alignBottom="@+id/editText4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="19dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Kg"
                android:id="@+id/textView4"
                android:layout_above="@+id/editText2"
                android:layout_toEndOf="@+id/editText2"
                android:layout_marginStart="26dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Kg"
                android:id="@+id/textView6"
                android:layout_alignTop="@+id/textView"
                android:layout_alignStart="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Kg"
                android:id="@+id/textView7"
                android:layout_above="@+id/editText4"
                android:layout_alignStart="@+id/textView6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Kg"
                android:id="@+id/textView8"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignStart="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Add your maxes"
                android:id="@+id/textView9"
                android:layout_above="@+id/editText1"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginBottom="27dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE MAXES"
                android:id="@+id/button"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/textView5"
                android:layout_marginBottom="33dp"
                android:onClick="sendMessage" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No workout available"
        android:paddingLeft="15dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
