<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_display_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.trainingsapp.chrisals.trainingsapp.DisplayMessageActivity"
    android:weightSum="1"
    android:background="@color/white">


    <android.support.v7.widget.CardView
        android:layout_margin="2dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:stateListAnimator="@anim/lift_on_touch"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="0dp"
        android:id="@+id/oida"
        android:onClick="prepareWarmUp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ãœbung"
            android:id="@+id/textView10"
            android:textAlignment="center"
            android:textSize="48sp"
            android:textColor="#ffffff"
            android:background="#01579b" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:stateListAnimator="@anim/lift_on_touch"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="0dp"
        android:id="@+id/oida1"
        android:onClick="prepareWarmUp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:background="#cfd8dc"
                android:layout_height="0.5dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Warm Up"
                android:textSize="24dp"
                android:layout_gravity="center"
                android:textColor="#000000" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/warmup_reps_weight_plates"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reps"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weight"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Plates"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:id="@+id/warmup_sets" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:id="@+id/warmup_weight" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:layout_weight="1"
                    android:lines="2"
                    android:textAlignment="center"
                    android:id="@+id/warmup_plates" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:id="@+id/warmup_sets1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:id="@+id/warmup_weight1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:layout_weight="1"
                    android:lines="2"
                    android:textAlignment="center"
                    android:id="@+id/warmup_plates1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:id="@+id/warmup_sets2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:id="@+id/warmup_weight2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:layout_weight="1"
                    android:lines="2"
                    android:textAlignment="center"
                    android:id="@+id/warmup_plates2" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10sp"
        android:layout_marginLeft="5sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reps"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plates"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textAlignment="center" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:elevation="4dp"
        android:layout_margin="2dp"
        android:stateListAnimator="@anim/lift_on_touch"
        android:clickable="true"
        android:focusableInTouchMode="true"
        app:cardCornerRadius="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10sp">


            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:text="5"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:id="@+id/textReps1"
                android:clickable="true"
                android:onClick="decreaseReps"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:id="@+id/textView32"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:id="@+id/platestextview"
                android:singleLine="false"
                android:layout_weight="1"
                android:lines="2"
                android:textAlignment="center" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view1"
        android:layout_margin="2dp"
        android:stateListAnimator="@anim/lift_on_touch"
        android:clickable="true"
        android:focusableInTouchMode="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10sp">


            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:text="5"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:id="@+id/textReps2"
                android:onClick="decreaseReps"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:id="@+id/textView33"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:id="@+id/platestextview1"
                android:singleLine="false"
                android:layout_weight="1"
                android:lines="2"
                android:textAlignment="center" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view2"
        android:layout_margin="2dp"
        android:stateListAnimator="@anim/lift_on_touch"
        android:clickable="true"
        android:focusableInTouchMode="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10sp">


            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:text="5"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:id="@+id/textReps3"
                android:onClick="decreaseReps"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:id="@+id/textView34"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:id="@+id/platestextview2"
                android:singleLine="false"
                android:layout_weight="1"
                android:lines="2"
                android:textAlignment="center" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
